
public class MenuItem {

    //initialize variables

    protected String name;
    private double price;
    private boolean onCurrentMenu;
   
    
    //Generate getters and setters
    
    public MenuItem(String name, double basePrice){
        this.name = name;
        this.price = basePrice; 
        onCurrentMenu = true;
        

    }


    public String getName() {
        return name;
    }
    public void setName(String name) {
        this.name = name;
    }
    public double getPrice() {
        return price;
    }
    public void setPrice(double price) {
        this.price = price;
    }
    public boolean isOnCurrentMenu() {
        return onCurrentMenu;
    }
    public void rotateOnCurrentMenu() {
        if(this.onCurrentMenu){
            this.onCurrentMenu = false;
        } else {
            this.onCurrentMenu = true;
        }
    }
    
    
}
