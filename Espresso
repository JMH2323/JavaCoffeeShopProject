
public class Espresso extends MenuItem{

int milkOzAmount;
int espressoAmount;
Ingredient wholeMilkOz;
Ingredient Espresso;

 public Espresso(String name, double basePrice, int milkAmount, int espressoAmount){

    super(name, basePrice);
    this.milkOzAmount = milkAmount;
    this.espressoAmount = espressoAmount;
    
    

}

public int getMilk(){
    return this.milkOzAmount;
}

public int getEspresso(){
    return this.espressoAmount;
}

public void useMilk(int i){
    wholeMilkOz.use(i);
}

public void useEspresso(int i){
    Espresso.use(i);
}

}
